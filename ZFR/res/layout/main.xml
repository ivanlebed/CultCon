<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="horizontal" android:id="@+id/MainLayout">
	<FrameLayout android:layout_width="match_parent"
		android:layout_height="match_parent" android:id="@+id/Container">
		<AbsoluteLayout android:layout_height="match_parent"
			android:layout_width="match_parent" android:id="@+id/ChooseACountry">
			<TextView android:layout_height="wrap_content" android:id="@+id/textView1"
				android:textSize="25sp" android:text="@string/Culture"
				android:layout_x="2dip" android:layout_width="fill_parent"
				android:layout_y="112dip" android:gravity="center_vertical|center_horizontal"></TextView>
			<Spinner android:layout_height="wrap_content"
				android:layout_x="1dip" android:layout_width="match_parent"
				android:layout_y="190dip" android:id="@+id/Countries"></Spinner>
			<Button android:gravity="center_vertical|center_horizontal"
				android:text="Go to Country" android:layout_height="wrap_content"
				android:id="@+id/GoToSellectedCountry" android:layout_x="106dip"
				android:layout_width="wrap_content" android:layout_y="265dip"></Button>
		</AbsoluteLayout>
		<AbsoluteLayout android:layout_width="match_parent"
			android:layout_height="match_parent" android:id="@+id/CountryInformaition">
			<TableRow android:layout_height="80dip"
				android:baselineAligned="true" android:id="@+id/TableRow01"
				android:layout_y="347dip" android:layout_x="0dip"
				android:layout_width="match_parent">
				<Button android:layout_weight="1" android:text="Gestures"
					android:layout_gravity="center" android:layout_width="wrap_content"
					android:layout_height="match_parent" android:id="@+id/BGestures"></Button>
				<Button android:layout_weight="1" android:text="Phrases"
					android:layout_width="wrap_content" android:layout_height="match_parent"
					android:id="@+id/Phrases"></Button>
			</TableRow>
			<TableRow android:layout_height="wrap_content"
				android:baselineAligned="true" android:id="@+id/TableRow02"
				android:layout_y="0dip" android:layout_x="0dip"
				android:layout_width="match_parent">
				<Button android:layout_weight="1" android:id="@+id/CountryChooser"
					android:layout_gravity="center"
					android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Go Back"></Button>
				<TextView android:id="@+id/countryName"
					android:layout_weight="1" android:layout_width="wrap_content"
					android:gravity="center_vertical|center_horizontal" android:text="The Country"
					android:textSize="20sp" android:layout_height="match_parent"></TextView>
			</TableRow>
			<ImageView android:layout_height="100dip" android:id="@+id/CountryImage"
				android:src="@drawable/icon" android:layout_y="52dip"
				android:layout_x="110dip" android:layout_width="100dip"></ImageView>
			<ScrollView android:layout_height="170dip"
				android:layout_y="161dip" android:layout_x="0dip"
				android:layout_width="match_parent" android:id="@+id/scrollView1">
				<TextView android:id="@+id/CountryInfo"
					android:layout_width="match_parent" android:layout_height="match_parent"
					android:text="TextView"></TextView>
			</ScrollView>
		</AbsoluteLayout>
		<AbsoluteLayout android:layout_height="match_parent"
			android:id="@+id/ChooseGesture" android:layout_width="match_parent">
			<Button android:text="Go back" android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:layout_x="1dip"
				android:id="@+id/GoBackToCountryFromGesture" android:layout_y="2dip"></Button>
			<TextView android:gravity="center_vertical|center_horizontal"
				android:text="Gestures" android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:id="@+id/TextView01"
				android:layout_x="2dip" android:textSize="25sp" android:layout_y="113dip"></TextView>
			<Spinner android:layout_x="2dip" android:id="@+id/Gestures"
				android:layout_height="wrap_content" android:layout_y="190dip"
				android:layout_width="match_parent"></Spinner>
			<Button android:text="Go To Gesture" android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:layout_x="104dip"
				android:layout_y="265dip" android:id="@+id/GestureChooser"></Button>
		</AbsoluteLayout>
		<AbsoluteLayout android:layout_width="match_parent"
			android:layout_height="match_parent" android:id="@+id/ViewGestureInformation">
			<TableRow android:layout_height="wrap_content"
				android:baselineAligned="true" android:id="@+id/tableRow1"
				android:layout_width="match_parent">
				<Button android:layout_weight="1" android:layout_gravity="center"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:id="@+id/GoBackToGesture" android:text="Go Back"></Button>
				<TextView android:id="@+id/GestureName"
					android:layout_weight="1" android:layout_width="wrap_content"
					android:gravity="center_vertical|center_horizontal" android:text="The Gesture"
					android:textSize="20sp" android:layout_height="match_parent"></TextView>
			</TableRow>
			<ImageView android:layout_height="100dip" android:id="@+id/GestureImage"
				android:src="@drawable/icon" android:layout_y="56dip"
				android:layout_x="114dip" android:layout_width="100dip"></ImageView>
			<ScrollView android:layout_height="170dip"
				android:layout_y="161dip" android:layout_x="0dip"
				android:layout_width="match_parent" android:id="@+id/scrollView2">
				<TextView android:id="@+id/GestureInformation"
					android:layout_width="match_parent" android:layout_height="wrap_content"
					android:text="TextView"></TextView>
			</ScrollView>
		</AbsoluteLayout>
		<AbsoluteLayout android:layout_height="match_parent"
			android:layout_width="match_parent" android:id="@+id/CommonPhrases">
			<LinearLayout android:orientation="vertical"
				android:layout_width="match_parent" android:id="@+id/linearLayout1"
				android:layout_height="match_parent">
				<Button android:layout_width="wrap_content" android:text="Go Back"
					android:layout_height="wrap_content" android:id="@+id/GoBackToCountryInformation"></Button>
				<TextView android:textSize="23sp" android:layout_width="match_parent"
					android:id="@+id/textView4" android:text="Phrases"
					android:layout_height="wrap_content" android:gravity="center_vertical|center_horizontal"></TextView>
				<TextView android:layout_width="match_parent" android:id="@+id/CommonPhrasesInfo"
					android:text="TextView" android:layout_height="match_parent"></TextView>
			</LinearLayout>
		</AbsoluteLayout>
	</FrameLayout>
</LinearLayout>
